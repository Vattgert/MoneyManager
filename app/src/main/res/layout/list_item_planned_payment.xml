<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cardViewContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp">
        <TextView
            android:id="@+id/plannedPaymentNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Плата за интернет"
            android:textSize="20sp"
            app:layout_constraintLeft_toLeftOf="@id/cardViewContainer"
            app:layout_constraintRight_toRightOf="@id/cardViewContainer"
            app:layout_constraintTop_toTopOf="@id/cardViewContainer"
            app:layout_constraintBottom_toBottomOf="@id/cardViewContainer"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/paymentInfoTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Интернет, Наличные"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="@id/cardViewContainer"
            app:layout_constraintRight_toRightOf="@id/cardViewContainer"
            app:layout_constraintTop_toTopOf="@id/cardViewContainer"
            app:layout_constraintBottom_toBottomOf="@id/cardViewContainer"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="45dp"/>
        <TextView
            android:id="@+id/paymentCostTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-50$"
            android:textColor="@color/colorAccent"
            android:textSize="22sp"
            app:layout_constraintLeft_toLeftOf="@id/cardViewContainer"
            app:layout_constraintRight_toRightOf="@id/cardViewContainer"
            app:layout_constraintTop_toTopOf="@id/cardViewContainer"
            app:layout_constraintBottom_toBottomOf="@id/cardViewContainer"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="75dp"/>
        <TextView
            android:id="@+id/paymentFrequencyTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ежедневно"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="@id/cardViewContainer"
            app:layout_constraintRight_toRightOf="@id/cardViewContainer"
            app:layout_constraintTop_toTopOf="@id/cardViewContainer"
            app:layout_constraintBottom_toBottomOf="@id/cardViewContainer"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"/>
        <TextView
            android:id="@+id/paymentDateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="02.05.12"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="@id/cardViewContainer"
            app:layout_constraintRight_toRightOf="@id/cardViewContainer"
            app:layout_constraintTop_toTopOf="@id/cardViewContainer"
            app:layout_constraintBottom_toBottomOf="@id/cardViewContainer"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:layout_marginTop="45dp"/>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>